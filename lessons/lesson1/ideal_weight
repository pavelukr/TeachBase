def count(name, height)
  ideal_weight = height - 110
  if ideal_weight.positive?
    puts "#{name}, your ideal weight is #{ideal_weight}"
  else
    puts 'Your weight is already ideal'
  end
end

puts 'Input your name here: '
name = gets.chomp
puts 'Input your height here: '
height = gets.chomp.to_i
count(name, height)
